/*8. Write a program to find next Prime number of a given number */
#include <stdio.h>
int main()
{
    int n;
    int count;
    int i, j;
    printf("Enter the prime number to find next prime numbers :");
    scanf("%d", &n);
    for (i = n + 1; i <= 100; i++)
    {
        count = 1;
        for (j = 2; j < i; j++)
        {
            if (i % j == 0)
            {
                count = 0;
                break;
            }
        }

        if (count == 1)
        {
            printf("Next prime is %d", i);
            break;
        }
    }

    return 0;
}
